{
  "development": {
    "api": {
      "host": "localhost",
      "port": 8000,
      "debug": true,
      "cors_origins": ["http://localhost:3000", "http://localhost:3001"]
    },
    "database": {
      "pool_size": 5,
      "max_overflow": 10,
      "pool_timeout": 30,
      "echo_sql": true
    },
    "supabase": {
      "timeout": 30,
      "max_retries": 3,
      "retry_delay": 1
    },
    "features": {
      "enable_debug_logging": true,
      "enable_request_logging": true,
      "enable_performance_monitoring": false,
      "enable_ai_tracing": true
    }
  },
  
  "staging": {
    "api": {
      "host": "0.0.0.0",
      "port": 8000,
      "debug": false,
      "cors_origins": ["https://staging.vyuu.app"]
    },
    "database": {
      "pool_size": 10,
      "max_overflow": 20,
      "pool_timeout": 30,
      "echo_sql": false
    },
    "supabase": {
      "timeout": 60,
      "max_retries": 5,
      "retry_delay": 2
    },
    "features": {
      "enable_debug_logging": false,
      "enable_request_logging": true,
      "enable_performance_monitoring": true,
      "enable_ai_tracing": true
    }
  },
  
  "production": {
    "api": {
      "host": "0.0.0.0",
      "port": 8000,
      "debug": false,
      "cors_origins": ["https://app.vyuu.com", "https://vyuu.app"]
    },
    "database": {
      "pool_size": 20,
      "max_overflow": 40,
      "pool_timeout": 60,
      "echo_sql": false
    },
    "supabase": {
      "timeout": 120,
      "max_retries": 5,
      "retry_delay": 3
    },
    "features": {
      "enable_debug_logging": false,
      "enable_request_logging": false,
      "enable_performance_monitoring": true,
      "enable_ai_tracing": false
    }
  }
} 